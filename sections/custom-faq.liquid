<div class="faq-container">
  {% assign faqs = collection.metafields.custom.faq.value %}

  {% if faqs == blank %}
    <h2 class="faq-heading">Frequently Asked Questions</h2>
    <div class="faq-list">
      {% for faq in faqs %}
        <div class="faq-item">
          <details>
            <summary>{{ faq.question }}</summary>
            <div class="faq-answer">
              <p>{{ faq.answer }}</p>
            </div>
          </details>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "FAQ Section",
    "tag": "section",
    "class": "faq-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Title",
        "default": "Frequently Asked Questions"
      }
    ],
    "presets": [
      {
        "name": "FAQ Section"
      }
    ]
  }
{% endschema %}